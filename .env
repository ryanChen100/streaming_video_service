# Postgres
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin
POSTGRES_MEMBER_DB=member_db
POSTGRES_CHAT_DB=chat_db
POSTGRES_STREAMING_DB=streaming_db

# Mongo
MONGO_HOST=MONGO
