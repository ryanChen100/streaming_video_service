# service yaml path
API_GATEWAY_YAML=./config
MEMBER_SERVICE_YAML=./config
CHAT_SERVICE_YAML=./config
STREAMING_SERVICE_YAML=./config

# service log path in container
API_GATEWAY_LOG=~/Desktop/log/api_gateway_log
